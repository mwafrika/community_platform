<div class="flex flex-col w-2/3 mb-4 p-4 mx-20">
    <h1 class="text-4xl font-bold my-8 capitalize"><%= @post.title %></h1>
    <p class=" text-gray-700 mb-2"><%= @post.body %></p>
<div class="flex flex-col">
<h1 class="text-4xl font-bold my-8 capitalize">Comments</h1>
   <% @comments.each do |comment| %>
        <%= render(Comments::CommentCardComponent.new(comment: comment, post: @post)) %> 
    <% end %>
</div>


