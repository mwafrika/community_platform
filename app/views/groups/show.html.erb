<div class=" flex flex-col justify-between gap-y-14 px-24">
<div class=" flex justify-between">
<div class="flex flex-col items-center">

<%= form_with model: [@group, Post.new], class:"bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 dark:bg-green-500", local: true, data:{controller: "post-form--post-form-component"} do |form| %>
  <div class="mb-4">
     <%= form.label :title, class:"block text-gray-700 text-sm font-bold mb-2", for:"name" %>
      <%= form.text_field :title, class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", id:"name", type:"text", placeholder:"Name" %>
  </div>
   <div class="mb-6">
     <%= form.label :body, class:"block text-gray-700 text-sm font-bold mb-2", for:"body" %>
     <%= form.text_area :body, class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", id:"body", type:"text", placeholder:"Description" %>
  </div>
  <div>
    <%= form.submit 'Submit', class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer', type:"submit" %>
  </div>
   </div>
</form>
<% end %>

  <div class="w-[20%]">
      <h1 class=" mb-4 mr-5 text-2xl font-bold">Members (<%= @members.length %>)</h1>
          <% @members.each do |member| %>
              <ul class="flex flex-col w-full space-x-4 gap-y-8">
                  <li class="px-[20px] flex justify-between even:bg-slate-400 odd:bg-slate-300">
                      <%= member.name %>
                      <span class="text-red-500 text-2xl cursor-pointer">
                      <i class="fa-solid fa-xmark"></i>
                      </span>
                  </li>
              </ul>
           <% end %>
    </div>
</div>
<div>
    <div class="flex flex-col gap-y-9">
      <h1 class="text-2xl font-bold">Posts (<%= @group.posts.length %>)</h1>
      <% @group.posts.each do |post| %>
          <%= render(Posts::PostCardComponent.new(post: post)) %>
      <% end %>
    <div>
  </div>
</div>


