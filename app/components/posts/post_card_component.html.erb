<div data-controller="posts--post-card-component">
    <div class="mb-4 p-4 rounded-lg bg-white shadow w-2/3">
        <div>
          <h2 class="text-lg font-bold mb-2"><%= @post.title %></h2>
          <p class="text-gray-700 mb-2"><%= @post.body %></p>
        </div>
        <div class=" flex text-gray-500/70 italic gap-x-1 mb-4">
            <p>Last comment 3days ago</p>
            <%= link_to ". Edit .", edit_group_post_path(@post) %>
            <%=form_with model: Post.new, url: group_post_path(@post), method: :delete do %>
               <button class="text-red-300">Delete .</button>
            <% end %> 
            <p>Created by <%= @post.user == current_user ? "You" : @post.user.name %></p>
        </div>
        <div>
        <div class="flex gap-x-4 items-center text-blue-500">
            <%= link_to "View Post", group_post_path(@post) %>
            <span class=" text-2xl">
                <i class="fa-solid fa-arrow-right"></i>
            </span>
        </div>
    </div>
</div>
